{
  "name": "cid-checker-api",
  "version": "0.0.1",
  "private": true,
  "main": "build/index.js",
  "engines": {
    "node": ">= 0.10.0"
  },
  "scripts": {
    "build": "rimraf ./build && tsc",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc.json '{src,test}/**/*.ts' --write",
    "start": "npm run build && DEBUG=cid-checker-api:* node -r dotenv/config build/server.js dotenv_config_path=.env",
    "start:dev": "DEBUG=cid-checker-api:* nodemon --watch src -e ts,js --exec 'ts-node -r dotenv/config ./src/server.ts dotenv_config_path=.env'",
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=test jest --watch -i --detectOpenHandles"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.23.2",
    "mongodb": "^3.6.0",
    "morgan": "^1.10.0",
    "got": "^11.8.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.47",
    "@types/jest": "^25.2.3",
    "@types/mongodb": "^3.5.26",
    "@types/morgan": "^1.9.0",
    "@types/node": "^14.0.5",
    "@types/rimraf": "^3.0.0",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/build/"
    ],
    "setupFiles": [
      "<rootDir>/test/dotenv.ts"
    ]
  }
}
